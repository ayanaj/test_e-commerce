<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" name="viewport" content="width=device-width" />

        <title>{% block title %} Bienvenu!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/logo.svg') }}" type="image/x-icon"/>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('/assets/css/bootstrap.css')}}">
            <link rel="stylesheet" href="{{ asset('/assets/css/bootstrap.min.css')}}">
            <link rel="stylesheet" href="{{ asset('/assets/css/bootstrap-grid.css')}}">
            <link rel="stylesheet" href="{{ asset('/assets/css/bootstrap-grid.min.css')}}">
            <link rel="stylesheet" href="{{ asset('/css/globalStyle.css')}}"> 

        {% endblock %}
        
        {% block javascripts %}
        <link rel="stylesheet" href="{{ asset('/assets/js/bootstrap.min.js')}}">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <body class="adjustedBody"> 
                {# loader #}
                <div id="preloader">
                    <div id="loader"></div> 
                </div>
            </body>
        {% endblock %}
    </body>
</html>
